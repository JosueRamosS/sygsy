                            "raw": "{\n    \"courseCompetence\": \"Diseña arquitecturas de software escalables y mantenibles.\",\n    \"profileCompetence\": \"Capacidad de análisis y diseño.\",\n    \"previousCompetence\": \"POO, Bases de Datos.\",\n    \"sumilla\": \"Fundamentos de arquitectura de software y patrones.\",\n    \"bibliography\": \"Bass, L. (2021). Software Architecture in Practice.\",\n    \"activities\": \"Análisis de casos, Diseño de diagramas.\",\n    \"units\": [\n        {\n            \"unitNumber\": 1,\n            \"title\": \"Fundamentos\",\n            \"content\": \"Introducción a la Arquitectura de Software, Estilos y Patrones.\",\n            \"startDate\": \"2025-08-18\",\n            \"endDate\": \"2025-09-13\",\n            \"week1Content\": \"INICIO: Presentación del curso.\",\n            \"week2Content\": \"TEMA01: Conceptos base.\",\n            \"week3Content\": \"TEMA02: Atributos de calidad.\",\n            \"week4Content\": \"TEMA03: Evaluación de arquitectura.\"\n        },\n        {\n            \"unitNumber\": 2,\n            \"title\": \"Patrones de Diseño\",\n            \"content\": \"Patrones Creacionales, Estructurales y de Comportamiento.\",\n            \"startDate\": \"2025-09-15\",\n            \"endDate\": \"2025-10-11\",\n            \"week1Content\": \"Patrones Creacionales (Singleton, Factory).\",\n            \"week2Content\": \"Patrones Estructurales (Adapter, Decorator).\",\n            \"week3Content\": \"Patrones de Comportamiento (Observer, Strategy).\",\n            \"week4Content\": \"Casos de estudio.\"\n        },\n        {\n            \"unitNumber\": 3,\n            \"title\": \"Arquitectura de Microservicios\",\n            \"content\": \"Principios de Microservicios, Diseño y Despliegue.\",\n            \"startDate\": \"2025-10-13\",\n            \"endDate\": \"2025-11-08\",\n            \"week1Content\": \"Monolitos vs Microservicios.\",\n            \"week2Content\": \"Diseño orientado a dominio (DDD).\",\n            \"week3Content\": \"Comunicación entre servicios.\",\n            \"week4Content\": \"Contenedores con Docker.\"\n        },\n        {\n            \"unitNumber\": 4,\n            \"title\": \"Proyecto Final\",\n            \"content\": \"Desarrollo y sustentación de una arquitectura propuesta.\",\n            \"startDate\": \"2025-11-10\",\n            \"endDate\": \"2025-12-06\",\n            \"week1Content\": \"Definición del proyecto.\",\n            \"week2Content\": \"Diseño de la solución.\",\n            \"week3Content\": \"Implementación de prototipo.\",\n            \"week4Content\": \"Sustentación final.\"\n        }\n    ],\n    \"evaluations\": [\n        { \"name\": \"EVIDENCIA 1\", \"weight\": 0.20, \"consolidationDate\": \"2025-09-15\", \"description\": \"Participación(10%)\\nAsistencia. (10%)\\nExamen de Entrada. (10%)\\nPráctica. (20%)\\nLaboratorios. (50%)\" },\n        { \"name\": \"EVIDENCIA 2\", \"weight\": 0.20, \"consolidationDate\": \"2025-10-06\", \"description\": \"Participación(10%)\\nAsistencia. (10%)\\nLaboratorios. (80%)\" },\n        { \"name\": \"EXAMEN PARCIAL\", \"weight\": 0.30, \"consolidationDate\": \"2025-10-27\", \"description\": \"Examen Teoría (80%)\\nExposición Patrones de Diseño. (20%)\" },\n        { \"name\": \"EVIDENCIA 3\", \"weight\": 0.20, \"consolidationDate\": \"2025-11-10\", \"description\": \"Participación(10%)\\nAsistencia. (10%)\\nLaboratorios. (60%)\\nActividad Extraacadémica. (20%)\" },\n        { \"name\": \"EVIDENCIA 4\", \"weight\": 0.10, \"consolidationDate\": \"2025-12-01\", \"description\": \"Participación(10%)\\nAsistencia. (10%)\\nLaboratorios. (60%)\\nPresentación Proyecto. (20%)\" },\n        { \"name\": \"EXAMEN FINAL\", \"weight\": 0.30, \"consolidationDate\": \"2025-12-15\", \"description\": \"1ra revisión proyecto. (10%)\\n2da revisión proyecto. (10%)\\nExamen Final teórico. (50%)\\nTrabajo Final. (30%)\" }\n    ]\n}"
